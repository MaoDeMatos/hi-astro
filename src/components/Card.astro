---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li
  class="group flex rounded-lg bg-white bg-brand-gradient p-0.5 shadow-md transition-[background-position] duration-500 [background-size:400%] [background-position:100%] hocus-within:[background-position:0]">
  <a
    href={href}
    class="w-full rounded-md bg-white py-4 px-5 text-gray-900 opacity-90">
    <h2
      class="m-0 text-xl font-bold transition-colors duration-500 group-hocus:text-accent">
      {title}
      <span>&rarr;</span>
    </h2>
    <p class="mt-2 mb-0 text-gray-500">
      {body}
    </p>
  </a>
</li>
